{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "PaymentFailed",
  "type": "object",
  "required": [
    "event_id",
    "event_type",
    "timestamp",
    "order_id",
    "reason"
  ],
  "properties": {
    "event_id": {
      "type": "string"
    },
    "event_type": {
      "type": "string",
      "enum": ["payment.failed"]
    },
    "timestamp": {
      "type": "string",
      "format": "date-time"
    },
    "order_id": {
      "type": "string"
    },
    "reason": {
      "type": "string"
    }
  }
}
