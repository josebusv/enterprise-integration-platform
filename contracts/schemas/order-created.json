{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "OrderCreated",
  "type": "object",
  "required": [
    "event_id",
    "event_type",
    "timestamp",
    "order_id",
    "customer_id",
    "total_amount",
    "currency"
  ],
  "properties": {
    "event_id": {
      "type": "string",
      "description": "Unique event identifier"
    },
    "event_type": {
      "type": "string",
      "enum": ["order.created"]
    },
    "timestamp": {
      "type": "string",
      "format": "date-time"
    },
    "order_id": {
      "type": "string"
    },
    "customer_id": {
      "type": "string"
    },
    "total_amount": {
      "type": "number",
      "minimum": 0
    },
    "currency": {
      "type": "string",
      "example": "USD"
    }
  }
}
