{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "PaymentConfirmed",
  "type": "object",
  "required": [
    "event_id",
    "event_type",
    "timestamp",
    "order_id",
    "payment_id",
    "amount"
  ],
  "properties": {
    "event_id": {
      "type": "string"
    },
    "event_type": {
      "type": "string",
      "enum": ["payment.confirmed"]
    },
    "timestamp": {
      "type": "string",
      "format": "date-time"
    },
    "order_id": {
      "type": "string"
    },
    "payment_id": {
      "type": "string"
    },
    "amount": {
      "type": "number"
    }
  }
}
